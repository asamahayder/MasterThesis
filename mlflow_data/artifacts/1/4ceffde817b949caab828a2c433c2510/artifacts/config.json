{
    "data_load": {
        "params": {
            "path_to_data_folder": "../Data/Ex-Vivo/"
        }
    },
    "preprocessing": {
        "params": {
            "pulse_window_size": 1500,
            "tukey_window_size": 1000,
            "tukey_alpha": 0.80
        }
    },
    "feature_engineering": {
        "params": {
            "degree_of_polynomial": 15
        }
    },
    "model_training_and_evaluation": {
        "params": {
            "k_outer": 4,
            "k_inner": 5,
            "feature_count_threshold_inner": 2,
            "feature_count_threshold_outer": 2,
            "n_estimators": {
                "min": 50,
                "max": 400
            },
            "max_depth": {
                "min": 5,
                "max": 30
            },
            "min_samples_split": {
                "min": 2,
                "max": 10
            },
            "min_samples_leaf": {
                "min": 1,
                "max": 10
            },
            "bootstrap": [true, false],
            "criterion": ["gini", "entropy"],
            "min_weight_fraction_leaf": {
                "min": 0.0,
                "max": 0.5
            },
            "max_leaf_nodes": {
                "min": 10,
                "max": 100
            },
            "min_impurity_decrease": {
                "min": 0.0,
                "max": 0.5
            },
            "optuna_n_trials": 20
        }
    }
}
